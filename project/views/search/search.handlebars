<div class="container my-auto">
    <div class="search-cover m-auto">
        <h1 class="search-cover-title">Find-A-Bird</h1>
        <h3 class="search-cover-subtitle">How would you like to find or identify a bird:</h3>
    </div>
    <div>
        {{! Search button for finding a bird by observation}}
        <button class="btn btn-primary search-button" onclick="location.href='/search/observation'">
            <div class="search-button-cover">
                <img class="search-button-cover-img" src="/img/observation.webp">
                <span class="search-button-cover-name">Observation</span>
            </div>
        </button>
        {{! Search button for finding a bird by name}}
        <button class="btn btn-primary search-button" onclick="location.href='/search/name'">
            <div class="search-button-cover">
                <img class="search-button-cover-img" src="/img/name.webp">
                <span class="search-button-cover-name">Name</span>
            </div>
        </button>
        {{! Search button for finding a bird by location}}
        <button class="btn btn-primary search-button" onclick="location.href='/search/location'">
            <div class="search-button-cover">
                <img class="search-button-cover-img" src="/img/location.webp">
                <span class="search-button-cover-name">Location</span>
            </div>
        </button>
        <div class="modal hide" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        ...
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>